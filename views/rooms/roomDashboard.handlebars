<section class="intro">

    <h1>Start Your <br> Adventure Now!</h1>

</section>
<h2>room Dashboard</h2>
 
 <section class="rooms-container">
   

     <form method="POST" action="/room/search">
        <label>Search By</label>
        <select name="room-search">
                <option value="all">All rooms</option>
                <option value="open">Open rooms</option>
                <option value="on-hold">On Hold rooms</option>
                <option value="closed">Closed rooms</option>
                <option value="pending">Pending rooms</option>
                <option value="low-priority">Low Priority</option>
                <option value="medium-priority">Meidum Priority</option>
                <option value="high-priority">High Priority</option>
        </select>
        <input type="submit" value="Search">
     </form> <br><br>

    <table border="1" style="text-align: center;">
        <thead>
                <th>Title</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Operation</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                   <td>
                        <a href="" class="room-title">{{this.title}}</a>
                   </td>
                   <td>
                       <span>{{this.priority}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.status}}</span>
                   </td>
                   <td>
                       <span>{{this.dueDate}}</span>
                   </td>
                   <td>
                        <a href="/room/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/room/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No rooms in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
 
</section>

<div id="rooms-links-holder">
    <a href="/room/add">Add a room</a>
</div>